<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_internet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_type_info"
    tools:context="abel.project.twa.vendedor.InternetActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/wifi"
        android:id="@+id/imageView"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="@string/reintentar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/reload"
        android:textSize="9pt"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background"
        android:shadowColor="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:fontFamily="serif"
        android:layout_marginBottom="26dp"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="10dp" />

    <TextView
        android:text="@string/noconnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center|bottom"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="14pt"
        android:textColor="@color/md_brown_500"
        android:shadowColor="@color/md_brown_500"
        android:fontFamily="serif-monospace"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
