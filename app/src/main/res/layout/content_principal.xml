<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="abel.project.twa.vendedor.PrincipalActivity"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:showIn="@layout/app_bar_principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:padding="10dp"
        android:background="@color/color_type_bluedark">

        <com.app.infideap.stylishwidget.view.ATextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/white"
            android:visibility="gone"
            android:id="@+id/cliente"
            android:padding="5dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:stretchColumns="*">

            <TableRow
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:stretchColumns="*">

                <TextView
                    android:text="DescripciÃ³n"
                    android:textColor="@color/white"
                    android:hint=""/>

                <TextView
                    android:text="UM"
                    android:textColor="@color/white"
                    android:hint=""/>

                <TextView
                    android:text="Cant."
                    android:textColor="@color/white"
                    android:hint=""/>

                <TextView
                    android:text="Precio"
                    android:textColor="@color/white"
                    android:hint=""/>

                <TextView
                    android:text="Total"
                    android:textColor="@color/white"
                    android:hint=""/>

            </TableRow>
        </TableLayout>


    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:padding="6dp"
        android:background="@color/color_type_bluedark">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">

            <TableRow android:paddingLeft="5dp">
                <TextView
                    android:id="@+id/factor"
                    android:textSize="6pt"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:text="@string/factor_cambio"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cantidArt"
                    android:textSize="6pt"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="@string/cant_articulos"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0"
            android:shrinkColumns="*">

            <TableRow android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/valorFactor"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/cantidadArtValue"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingRight="10dp" />

            </TableRow>

        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#FFFFFF"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutItemTotal"
            android:layout_marginTop="5dp"
            android:stretchColumns="*">

            <TableRow android:paddingLeft="5dp">
                <TextView
                    android:text="@string/total"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/factortotal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:hint=""/>
                <TextView
                    android:id="@+id/currencyTotal"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:textColor="@color/white"
                    android:hint=""/>
            </TableRow>
        </TableLayout>



    </LinearLayout>


</LinearLayout>
